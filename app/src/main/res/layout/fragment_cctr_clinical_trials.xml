<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.example.workstation.cctrmobileapp.cctr_clinical_trials$PlaceholderFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cctr_search"
        android:drawableTop="@drawable/search_gold"
        android:text="Search"
        android:background="#FFFFFF"
        android:layout_above="@+id/cctr_recent"
        android:layout_alignLeft="@+id/cctr_ct_banner"
        android:layout_alignStart="@+id/cctr_ct_banner"
        android:layout_marginBottom="41dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cctr_favorites"
        android:drawableTop="@drawable/favorite_gold"
        android:text="Favorite"
        android:background="#FFFFFF"
        android:layout_alignTop="@+id/cctr_search"
        android:layout_alignRight="@+id/cctr_ct_banner"
        android:layout_alignEnd="@+id/cctr_ct_banner" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cctr_recent"
        android:drawableTop="@drawable/recent_gold"
        android:text="Recent"
        android:background="#FFFFFF"
        android:layout_above="@+id/cctr_ct_banner"
        android:layout_alignLeft="@+id/cctr_search"
        android:layout_alignStart="@+id/cctr_search"
        android:layout_marginBottom="119dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cctr_contactus"
        android:drawableTop="@drawable/contact_gold"
        android:text="Contact Us"
        android:background="#FFFFFF"
        android:layout_alignTop="@+id/cctr_recent"
        android:layout_alignLeft="@+id/cctr_favorites"
        android:layout_alignStart="@+id/cctr_favorites" />

    <ImageView
        android:id="@+id/cctr_ct_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background_logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
