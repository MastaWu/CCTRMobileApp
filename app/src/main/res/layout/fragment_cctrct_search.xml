<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.workstation.cctrmobileapp.cctrct_search">

    <!-- TODO: Update blank fragment layout -->

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#C6C6C6">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/cctrct_search_submit"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/help"
        android:background="@drawable/ic_action_help"
        android:layout_alignTop="@+id/cctrct_search_submit"
        android:layout_alignRight="@+id/cctr_search_logo"
        android:layout_alignEnd="@+id/cctr_search_logo"
        android:layout_toRightOf="@+id/cctrct_search_submit"
        android:layout_toEndOf="@+id/cctrct_search_submit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search Clinical Trials"
        android:textStyle="bold"
        android:id="@+id/cctr_search_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:layout_gravity="center_horizontal|top" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Protocol #"
        android:id="@+id/cctrct_search_keyword"
        android:ellipsize="start"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="41dp"
        android:inputType="text"
        android:layout_below="@+id/cctrct_search_dsite"
        android:layout_alignLeft="@+id/cctrct_search_pnum"
        android:layout_alignStart="@+id/cctrct_search_pnum" />

    <EditText
        android:layout_width="100dp"
        android:ellipsize="start"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Title"
        android:id="@+id/cctrct_search_dsite"
        android:layout_below="@+id/cctr_search_logo"
        android:layout_marginTop="22dp"
        android:layout_gravity="left|center_vertical"
        android:inputType="text"
        android:layout_alignLeft="@+id/cctrct_search_keyword"
        android:layout_alignStart="@+id/cctrct_search_keyword" />

    <EditText
        android:layout_width="150dp"
        android:ellipsize="start"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Short Title"
        android:id="@+id/cctrct_search_pnum"
        android:layout_below="@+id/cctrct_search_keyword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:layout_gravity="left|center_vertical"
        android:inputType="text"/>

    <ImageView
        android:id="@+id/cctr_search_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/background_logo_gray"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cctrct_search_pnum"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/rg">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phase I"
            android:id="@+id/cctrct_p1"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phase II"
            android:id="@+id/cctrct_p2"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phase III"
            android:id="@+id/cctrct_p3"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phase IV"
            android:id="@+id/cctrct_p4"/>

    </RadioGroup>

</RelativeLayout>

</FrameLayout>
